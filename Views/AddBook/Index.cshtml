@model BookWyrm.ViewModels.AddBookIndexViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Add Book</h2>
@Html.ValidationSummary("The following errors were found:", new { @class = "alert alert-danger" })
@using (Html.BeginForm())
{
    <div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Title, new { placeholder = "Title", @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(m => m.Authors, new { placeholder = "Author", @class = "form-control" })
        </div>

        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
}


